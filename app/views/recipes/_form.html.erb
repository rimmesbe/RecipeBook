<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <p>
      Title:<%= f.text_field :title %><br>
      Instructions:<br><%= f.text_area :instruction, :rows => 5 %>
    </p>
    <%= f.select(:ingredient_food_type, ["meat", "grain", "dairy", "vegetable", "fruit", "spice", "other"]) %>
    <%= f.fields_for :recipe_ingredients, @recipe_ingredient do |builder| %>
      <%= render 'recipe_ingredient_fields', :f => builder %>
    <% end %>
    <p id="add_recipe"><%= link_to_add_fields "Add Recipe_Ingredient", f, :recipe_ingredients %></p>
    <p><%= f.submit %></p>
  </div>
<% end %>
